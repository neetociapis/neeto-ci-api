{
  "$schema": "https://mintlify.com/docs.json",
  "name": "NeetoCI API",
  "description": "NeetoCI API docs guide to manage CI/CD pipelines",
  "theme": "mint",
  "colors": {
    "primary": "#10B981",
    "light": "#34D399",
    "dark": "#059669"
  },
  "favicon": "/assets/favicon.svg",
  "navbar": {
    "links": [
      {
        "label": "Blog",
        "href": "https://www.neeto.com/neetoci/blog"
      },
      {
        "label": "Help center",
        "href": "https://help.neetoci.com/"
      }
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/neetohq",
      "linkedin": "https://www.linkedin.com/company/neeto",
      "youtube": "https://www.youtube.com/channel/UCoQ3Kv2JdZ51WZJ3QFFcI9g",
      "slack": "https://www.launchpass.com/neetohq"
    }
  },
  "navigation": {
    "pages": [
      {
        "group": "Getting Started",
        "icon": "rocket",
        "pages": [
          "getting-started/introduction",
          "getting-started/identifying-subdomain",
          "getting-started/authentication",
          "getting-started/quickstart",
          "getting-started/response-codes"
        ]
      },
      {
        "group": "CI Jobs API",
        "icon": "play",
        "pages": [
          "api-reference/ci-jobs/trigger-ci-job"
        ]
      }
    ]
  },
  "api": {
    "params": {
      "expanded": "all"
    },
    "playground": {
      "display": "interactive",
      "proxy": true
    },
    "examples": {
      "languages": [
        "curl",
        "javascript",
        "python"
      ],
      "defaults": "all"
    }
  },
  "styling": {
    "eyebrows": "section",
    "codeblocks": "system"
  },
  "appearance": {
    "default": "light",
    "strict": true
  }
}
